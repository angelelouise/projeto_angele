<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#848484">

        <ImageView
            android:id="@+id/perfil_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/ic_launcher_round" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5">


        <LinearLayout
            android:id="@+id/Esquerda"
            android:layout_width="154dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="#424242"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textAlignment="viewEnd"
                android:textColor="#fafafa"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/perfil_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textAlignment="viewEnd"
                android:textColor="#FAFAFA"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Usuário"
                android:textAlignment="viewEnd"
                android:textColor="#fafafa"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/perfil_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textAlignment="viewEnd"
                android:textColor="#FAFAFA"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Direita"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#424242"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/perfil_email"
                android:layout_alignBottom="@+id/perfil_email"
                android:text="Email"
                android:textAlignment="viewEnd"
                android:textColor="#fafafa"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="right"/>

            <TextView
                android:id="@+id/perfil_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/perfil_descricao"
                android:text="example@mail.com"
                android:textAlignment="viewEnd"
                android:textColor="#FAFAFA"
                android:textSize="16sp"
                android:layout_gravity="right"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:textAlignment="viewEnd"
                android:textColor="#fafafa"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:paddingTop="16dp"/>

            <TextView
                android:id="@+id/perfil_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobre mim..."
                android:textAlignment="viewEnd"
                android:textColor="#FAFAFA"
                android:textSize="18sp"
                android:layout_gravity="right"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/voltar"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/perfil_email"
            android:background="#403040"
            android:onClick="voltar"
            android:text="Voltar"
            android:textColor="#fafafa" />

        <Button
            android:id="@+id/editar"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView"
            android:background="#403040"
            android:onClick="editar"
            android:text="Editar"
            android:textColor="#fafafa" />

    </LinearLayout>
</LinearLayout>
