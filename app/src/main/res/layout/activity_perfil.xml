<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#848484">

        <ImageView
            android:id="@+id/perfil_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/ic_launcher_round" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#424242"
        android:orientation="vertical">

        <TextView
            android:id="@+id/perfil_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/perfil_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Nome"
            android:textColor="#FAFAFA"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/perfil_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User"
            android:textColor="#FAFAFA"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/perfil_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/perfil_img"
            android:layout_marginTop="54dp"
            android:text="example@mail.com"
            android:textColor="#FAFAFA"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/perfil_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sobre mim..."
            android:textColor="#FAFAFA"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/perfil_img"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </LinearLayout>
</LinearLayout>
