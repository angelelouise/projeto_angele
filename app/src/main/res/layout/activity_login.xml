<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/in_user"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/in_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/in_password"
        android:layout_alignStart="@+id/in_password"
        android:layout_marginBottom="36dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="UsuÃ¡rio"
        android:textColor="#FAFAFA" />

    <EditText
        android:id="@+id/in_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="193dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="#FAFAFA"
        android:textColorHint="#FAFAFA" />

    <Button
        android:id="@+id/logar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/in_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="Entrar"
        android:onClick="logar"
        android:background="#403040"
        android:textColor="#fafafa"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>
    <Button
        android:id="@+id/novousuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/in_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:text="cadastre-se"
        android:onClick="cadastrarUsuario"
        android:background="#403040"
        android:textColor="#fafafa"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

</RelativeLayout>
